from gpiozero import LED
from time import sleep
red=LED(22)
orange=LED(27)
green=LED(17)
while True:
        red.on()
        sleep(1)
        orange.on(1)
        sleep(1)
        green.on()
        sleep(1)
        red.off()
        sleep(1)
        orange.off()
        sleep(1)
        green.off()
